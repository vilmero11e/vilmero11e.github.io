<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vilmerolle</title>
    <link rel="icon" href="data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='64' height='64' viewBox='0 0 64 64'><circle cx='32' cy='32' r='30' fill='%238a2be2'/></svg>">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #2d2b38;
            color: white;
            text-align: center;
            margin: 0;
            padding: 0;
        }
        h1 {
            font-size: 3em;
            margin-top: 100px;
            color: #fff;
        }
        p {
            font-size: 1.5em;
            margin-top: 20px;
            color: #ddd;
        }
        .social-links {
            margin-top: 50px;
        }
        .social-links a {
            text-decoration: none;
            color: #8a2be2;
            font-size: 1.2em;
            margin: 0 15px;
            transition: color 0.3s;
        }
        .social-links a:hover {
            color: #d18bff;
        }

        /* Floating Button */
        .floating-button {
            position: fixed;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            padding: 12px 25px;
            background-color: #8a2be2;
            color: white;
            border: none;
            font-size: 1.5em;
            border-radius: 50px;
            cursor: pointer;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s;
        }
        .floating-button:hover {
            transform: translateX(-50%) scale(1.1) rotate(10deg);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        }

        /* Modal Window Styles */
        .modal-overlay {
            display: none; /* Hidden by default */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: 999;
            justify-content: center;
            align-items: center;
            transition: opacity 0.3s ease;
        }
        .modal-window {
            background-color: #333;
            border-radius: 10px;
            padding: 30px;
            width: 500px;
            max-width: 90%;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            color: #fff;
            font-size: 1.2em;
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.3s ease, transform 0.3s ease;
        }
        .modal-header {
            font-size: 1.8em;
            margin-bottom: 20px;
            font-weight: bold;
            text-align: center;
            color: #8a2be2;
        }
        .modal-content {
            text-align: center;
            margin-bottom: 20px;
        }
        .modal-content a {
            color: #8a2be2;
            font-weight: bold;
            font-size: 1.2em;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        .modal-content a:hover {
            color: #d18bff;
        }
        .close-modal-btn {
            background-color: #ff6961;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 1.2em;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .close-modal-btn:hover {
            background-color: #e55b50;
        }
    </style>
</head>
<body>
    <h1>Welcome to My Website</h1>
    <p>Check out my social media links and my projects!</p>
    
    <div class="social-links">
        <p>Social Links:</p>
        <a href="https://discord.com/users/772450136013799454" target="_blank">/discord</a>
        <a href="https://github.com/vilmero11e" target="_blank">/github</a>
        <a href="https://www.reddit.com/user/vilmero11e/" target="_blank">/reddit</a>
        <a href="https://x.com/vilmero11e" target="_blank">/twitter</a>
    </div>

    <!-- Floating Show Project Button -->
    <button class="floating-button" id="showProjectButton">Show My Project</button>

    <!-- Modal Window -->
    <div id="modalOverlay" class="modal-overlay">
        <div class="modal-window">
            <div class="modal-header">Christmas Countdown</div>
            <div class="modal-content">
                <p>This is a fun Christmas countdown app I created to keep track of the days until Christmas!</p>
                <a href="https://daystochristmas.netlify.app/" target="_blank">View Live Project</a>
            </div>
            <button class="close-modal-btn" id="closeModalButton">Close</button>
        </div>
    </div>

    <!-- Dynamically Load oneko.js -->
    <script>
        // Load oneko.js immediately on page load
        const onekoScript = document.createElement('script');
        onekoScript.src = 'https://cdn.jsdelivr.net/npm/oneko@1.0.2/oneko.min.js';
        document.body.appendChild(onekoScript);

        // Initialize the cat animation once the script is loaded
        onekoScript.onload = function() {
            // Start the cat animation
            oneko();
        };

        // Get the modal window and button
        const showProjectButton = document.getElementById('showProjectButton');
        const modalOverlay = document.getElementById('modalOverlay');
        const closeModalButton = document.getElementById('closeModalButton');
        const modalWindow = document.querySelector('.modal-window');

        // Show the modal window
        showProjectButton.addEventListener('click', function() {
            modalOverlay.style.display = 'flex'; // Show the modal overlay
            setTimeout(() => {
                modalWindow.style.opacity = 1;  // Fade in the modal window
                modalWindow.style.transform = 'translateY(0)'; // Slide in effect
            }, 100);
        });

        // Close the modal window
        closeModalButton.addEventListener('click', function() {
            modalWindow.style.opacity = 0;  // Fade out the modal window
            modalWindow.style.transform = 'translateY(-20px)'; // Slide out effect
            setTimeout(() => {
                modalOverlay.style.display = 'none'; // Hide the modal overlay after animation
            }, 300);
        });

        // Fetch random words from the GitHub raw txt file
        fetch('https://raw.githubusercontent.com/Shreda/pentestTools/refs/heads/master/random-words.txt')
            .then(response => response.text())
            .then(data => {
                const words = data.split('\n'); // Split the text file into words based on new lines
                
                // Title change functionality based on tab focus
                const originalTitle = document.title;
                const originalFavicon = document.querySelector("link[rel='icon']");
                
                // Function to change the title to a random word
                function getRandomWord() {
                    const randomIndex = Math.floor(Math.random() * words.length);
                    return words[randomIndex].trim(); // Trim to remove any unwanted spaces or newlines
                }

                // Event listeners for document visibility
                document.addEventListener('visibilitychange', function() {
                    if (document.hidden) {
                        // Set title to a random word when the tab is inactive
                        document.title = getRandomWord();
                        originalFavicon.href = "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='64' height='64' viewBox='0 0 64 64'><circle cx='32' cy='32' r='30' fill='%238a2be2'/></svg>";
                    } else {
                        // Restore title when the tab is active
                        document.title = "Vilmerolle";
                        originalFavicon.href = "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='64' height='64' viewBox='0 0 64 64'><circle cx='32' cy='32' r='30' fill='%238a2be2'/></svg>";
                    }
                });
            })
            .catch(error => console.error('Error fetching words:', error));
    </script>
</body>
</html>
